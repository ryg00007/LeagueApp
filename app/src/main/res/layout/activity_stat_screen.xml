<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatScreen">

    <TextView
        android:id="@+id/SummonerName"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center_horizontal"
        android:text="Name"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rankImageView"
        android:layout_width="106dp"
        android:layout_height="92dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/ProfileIcon"
        app:layout_constraintStart_toStartOf="@+id/ProfileIcon"
        app:layout_constraintTop_toBottomOf="@+id/ProfileIcon"
        app:srcCompat="@drawable/emblem_bronze" />

    <TextView
        android:id="@+id/rankTextView"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="76dp"
        android:background="#8000"
        android:gravity="center"
        android:text="ChampName"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/rankImageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/rankImageView"
        app:layout_constraintTop_toBottomOf="@+id/ProfileIcon" />

    <ImageView
        android:id="@+id/GameTrack1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/winsTextView"
        app:srcCompat="@drawable/gamelosecross" />

    <TextView
        android:id="@+id/winPercentTextView"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="WinPercent"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/winrateBar"
        app:layout_constraintStart_toStartOf="@+id/winrateBar"
        app:layout_constraintTop_toBottomOf="@+id/winrateBar" />

    <ProgressBar
        android:id="@+id/netloadProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/GameTrack4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/GameTrack3"
        app:layout_constraintStart_toEndOf="@+id/GameTrack5"
        app:layout_constraintTop_toBottomOf="@+id/winsTextView"
        app:srcCompat="@drawable/gamelosecross" />

    <TextView
        android:id="@+id/winsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Wins"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/winPercentTextView"
        app:layout_constraintStart_toStartOf="@+id/winPercentTextView"
        app:layout_constraintTop_toBottomOf="@+id/winPercentTextView" />

    <TextView
        android:id="@+id/last10TextView"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:text="Last 10 Games Played"
        android:textColor="@android:color/black"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline6" />

    <TextView
        android:id="@+id/SummonerLevel"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:text="Level"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/SummonerName"
        app:layout_constraintStart_toStartOf="@+id/SummonerName"
        app:layout_constraintTop_toBottomOf="@+id/SummonerName" />

    <ImageView
        android:id="@+id/GameTrack2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/GameTrack1"
        app:layout_constraintStart_toEndOf="@+id/GameTrack3"
        app:layout_constraintTop_toBottomOf="@+id/winsTextView"
        app:srcCompat="@drawable/gamelosecross" />

    <ImageView
        android:id="@+id/ProfileIcon"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginTop="32dp"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/presence_online" />

    <ImageView
        android:id="@+id/GameTrack3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/winsTextView"
        app:layout_constraintStart_toStartOf="@+id/winsTextView"
        app:layout_constraintTop_toBottomOf="@+id/winsTextView"
        app:srcCompat="@drawable/gamelosecross" />

    <ImageView
        android:id="@+id/GameTrack5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/winsTextView"
        app:srcCompat="@drawable/gamelosecross" />

    <ProgressBar
        android:id="@+id/winrateBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="180dp"
        android:layout_height="18dp"
        android:layout_marginTop="16dp"
        android:max="100"
        android:progress="25"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/SummonerLevel" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerViewGames"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last10TextView"
        app:layout_constraintVertical_bias="0.005" />

    <ImageView
        android:id="@+id/statscreenErrorImage"
        android:layout_width="195dp"
        android:layout_height="195dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.421"
        app:srcCompat="@drawable/errorporo2" />

    <TextView
        android:id="@+id/statscreenErrorText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="We ran into an error!"
        android:textColor="@android:color/black"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/statscreenErrorImage"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/statscreenErrorImage"
        app:layout_constraintTop_toBottomOf="@+id/statscreenErrorImage" />

    <TextView
        android:id="@+id/statscreenErrorText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/statscreenErrorImage"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="@+id/statscreenErrorImage"
        app:layout_constraintTop_toBottomOf="@+id/statscreenErrorText1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>